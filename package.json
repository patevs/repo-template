{
  "name": "repo-template",
  "version": "1.6.1",
  "description": "A Basic Repository Template for Generic Projects",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/repo-template.git"
  },
  "scripts": {
    "commit": "git-cz",
    "release": "release-it",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/core": "^9.0.1",
    "commitizen": "^4.1.2",
    "commitlint-config-gitmoji": "^1.0.1",
    "cz-emoji": "^1.2.1",
    "husky": "^4.2.5",
    "release-it": "^13.6.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "./node_modules/commitlint-config-gitmoji"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "body",
        "issues"
      ]
    }
  },
  "release-it": {
    "git": {
      "requireBranch": "master",
      "commit": true,
      "commitMessage": ":bookmark: Release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}
